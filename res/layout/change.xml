<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".changeActivity" >

    
    <LinearLayout
        android:id="@+id/linearLayout001"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TableLayout 
        android:id="@+id/tableLayout002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow 
        android:id="@+id/tablerow001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textSize="24sp" />
    <EditText
        android:id="@+id/user_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp" />
    </TableRow>>
    <TableRow 
        android:id="@+id/tablerow002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_change1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入修改密码："
        android:textSize="24sp" />
    <EditText
        android:id="@+id/pwd_change2"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp" />
    </TableRow>
</TableLayout>
    </LinearLayout>
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认" />
</LinearLayout>